{
  "compilerOptions": {
    "lib": ["es6"],
    "allowJs": true,
    "outDir": ".build",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "inlineSourceMap": true
  },
  "exclude": [
    "lib/**/*",
    "test/**/*",
    ".eslintrc.cjs",
    "jest.config.cjs",
    "tsconfig.json",
    "nodemon.json"
  ],
  "ts-node": {
    "esm": true
  },
  "lib": ["esnext"]
}
