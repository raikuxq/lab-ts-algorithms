{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "outDir": "lib",
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "inlineSourceMap": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": ["jest", "node"]
  },
  "exclude": [
    "docs/**/*",
    ".eslintrc.cjs",
    "jest.config.cjs",
    "tsconfig.json",
    "nodemon.json",
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "demo/**/*"
  ],
  "lib": ["esnext"]
}
