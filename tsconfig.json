{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "outDir": "lib",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es5",
    "inlineSourceMap": true
  },
  "exclude": [
    "lib/**/*",
    "test/**/*",
    ".eslintrc.cjs",
    "jest.config.cjs",
    "tsconfig.json",
    "nodemon.json",
    "src/types",
    "src/demo"
  ],
  "include": [
    "src/exports",
    "src/algorithms",
    "src/data-structures",
    "src/helpers",
    "src/constants.ts",
    "src/utils.ts",
    "src/exports.ts",
    "src/index.ts"
  ],
  "lib": ["esnext"]
}
