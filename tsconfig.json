{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "outDir": "lib",
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "inlineSourceMap": false,
    "isolatedModules": true
  },
  "exclude": [
    "docs/**/*",
    "test/**/*",
    "demo/**/*",
    ".eslintrc.cjs",
    "jest.config.cjs",
    "tsconfig.json",
    "nodemon.json",
    "src/app/types"
  ],
  "include": [
    "src/app/algorithms",
    "src/app/data-structures",
    "src/app/exceptions",
    "src/app/constants.ts",
    "src/app/utils.ts",
    "src/exports.ts",
    "src/index.ts"
  ],
  "lib": ["esnext"]
}
