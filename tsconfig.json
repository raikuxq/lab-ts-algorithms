{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "outDir": "lib",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES6",
    "rootDir": "src",
    "inlineSourceMap": false
  },
  "exclude": [
    "docs/**/*",
    "test/**/*",
    "demo/**/*",
    ".eslintrc.cjs",
    "jest.config.cjs",
    "tsconfig.json",
    "nodemon.json",
    "src/app/types"
  ],
  "include": [
    "src/exports",
    "src/app/algorithms",
    "src/app/data-structures",
    "src/app/exceptions",
    "src/app/constants.ts",
    "src/app/utils.ts",
    "src/exports.ts",
    "src/index.ts"
  ],
  "lib": ["esnext"]
}
