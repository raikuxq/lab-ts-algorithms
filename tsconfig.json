{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": ".build",
    "declaration": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    ".build"
  ],
  "exclude": [
    "test/**/*",
    ".eslintrc.js",
    "jest.config.js",
    "tsconfig.json",
    "nodemon.json"
  ]
}
